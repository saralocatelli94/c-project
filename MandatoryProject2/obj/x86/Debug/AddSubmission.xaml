<Page
    x:Class="MandatoryProject2.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MandatoryProject2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF4C5CFB" CornerRadius="6">
        <TextBox x:ConnectionId='1' x:Name="Name" HorizontalAlignment="Left" Margin="245,140,0,0" TextWrapping="Wrap" Text="Insert Name" VerticalAlignment="Top" Height="19" Width="246"                             BorderThickness="0,0,0,2" BorderBrush="#66000000"  Background="{x:Null}" FontSize="14" FontStyle="Italic" SelectionHighlightColor="#FFFF78D7"   />
        <TextBox x:ConnectionId='2' x:Name="Surname" HorizontalAlignment="Left" Margin="245,239,0,0" TextWrapping="Wrap" Text="Surname" VerticalAlignment="Top" Width="246" Height="20"                             BorderThickness="0,0,0,2" SelectionHighlightColor="Black" BorderBrush="#66000000" Background="#00000000" FontStyle="Italic" FontSize="14" />
        <TextBox x:ConnectionId='3' x:Name="PhoneNr" HorizontalAlignment="Left" Margin="245,324,0,0" TextWrapping="Wrap" Text="Phone number" VerticalAlignment="Top" Width="246" Height="19"                             BorderThickness="0,0,0,2" BorderBrush="#66000000" Background="#00000000" FontStyle="Italic" FontSize="14"/>
        <Button x:ConnectionId='4' HorizontalAlignment="Left" Margin="975,550,0,0" VerticalAlignment="Top"                      Height="55" Width="170" Content="Confirm" Background="#FF5D2440" Foreground="White" FontSize="20" FontWeight="Bold" RenderTransformOrigin="2.629,0.364"/>
        <Button x:ConnectionId='5' x:Name="save" Content="Query result" HorizontalAlignment="Left" Margin="990,430,0,0" VerticalAlignment="Top"                    Height="55" Width="170"/>
        <TextBox x:ConnectionId='6' x:Name="xmlResult" HorizontalAlignment="Left" TextWrapping="Wrap" Text="XML FILE" VerticalAlignment="Top" RenderTransformOrigin="12.958,4.688" Margin="900,55,0,0" Height="325" Width="355"                            />
        <TextBox x:ConnectionId='7' x:Name="Email" HorizontalAlignment="Left" Margin="246,407,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="246" Height="19"                             BorderThickness="0,0,0,2" BorderBrush="#66000000" Background="#00000000" FontSize="14" FontStyle="Italic"/>
        <TextBox x:ConnectionId='8' x:Name="SeriaNr" HorizontalAlignment="Left" Margin="247,503,0,0" TextWrapping="Wrap" Text="Serial number" VerticalAlignment="Top" Width="246" Height="19"                             BorderThickness="0,0,0,2" BorderBrush="#66000000" Background="#00000000" FontSize="14" FontStyle="Italic"/>
        <ProgressRing HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <DatePicker x:ConnectionId='9' x:Name="Date" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="547,115,0,0"                           Background="#00000000"  />
        <Button x:ConnectionId='10' x:Name="Upload" Content="Choose Image" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="605,189,0,0" Height="55" Width="160"                      Grid.Row="1"/>
        <Image x:ConnectionId='11' x:Name="Image" HorizontalAlignment="Left" Height="241" Margin="542,269,0,0" VerticalAlignment="Top" Width="310" Grid.Row="1"/>
        <TextBox x:ConnectionId='12' x:Name="NameLabel" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" RenderTransformOrigin="3.662,11.094" Margin="244,110,0,0" IsEnabled="False" Height="19" Width="246"/>
        <TextBox x:ConnectionId='13' x:Name="NameLabel_Copy" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Surname" VerticalAlignment="Top" RenderTransformOrigin="3.662,11.094" Margin="245,205,0,0" IsEnabled="False" Height="19" Width="246"/>
        <TextBox x:ConnectionId='14' x:Name="NameLabel_Copy1" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Phone number" VerticalAlignment="Top" RenderTransformOrigin="3.662,11.094" Margin="245,291,0,0" IsEnabled="False" Height="19" Width="246"/>
        <TextBox x:ConnectionId='15' x:Name="NameLabel_Copy2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" RenderTransformOrigin="3.662,11.094" Margin="247,374,0,0" IsEnabled="False" Height="19" Width="246"/>
        <TextBox x:ConnectionId='16' x:Name="NameLabel_Copy3" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Serial Number" VerticalAlignment="Top" RenderTransformOrigin="3.662,11.094" Margin="247,470,0,0" IsEnabled="False" Height="19" Width="246"/>
        <TextBox x:ConnectionId='17' x:Name="NameLabel_Copy4" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Date of birth" VerticalAlignment="Top" RenderTransformOrigin="3.662,11.094" Margin="574,55,0,0" IsEnabled="False" Height="19" Width="246" />
    </Grid>
</Page>

